@{
    ViewData["Title"] = "Kayıt Ol";
}
<h2 class="fw-bold mb-4 text-theme" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:700;">Kayıt Ol</h2>
<form asp-action="Register" method="post" class="bg-white rounded-4 shadow p-4">
    <div class="form-group">
        <label for="adSoyad" class="form-label fw-semibold" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Ad Soyad</label>
        <input type="text" class="form-control fs-16px" id="adSoyad" name="adSoyad" required style="font-family:'Inter','Roboto',Arial,sans-serif;font-size:16px;" />
    </div>
    <div class="form-group">
        <label for="email" class="form-label fw-semibold" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">E-posta</label>
        <input type="email" class="form-control fs-16px" id="email" name="email" required style="font-family:'Inter','Roboto',Arial,sans-serif;font-size:16px;" />
    </div>
    <div class="form-group">
        <label for="telefon" class="form-label fw-semibold" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Telefon (opsiyonel)</label>
        <input type="text" class="form-control fs-16px" id="telefon" name="telefon" style="font-family:'Inter','Roboto',Arial,sans-serif;font-size:16px;" />
    </div>
    <div class="form-group">
        <label for="password" class="form-label fw-semibold" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Şifre</label>
        <input type="password" class="form-control fs-16px" id="password" name="password" required style="font-family:'Inter','Roboto',Arial,sans-serif;font-size:16px;" />
    </div>
    <button type="submit" class="btn btn-theme fw-bold rounded-pill mt-2 px-4" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Kayıt Ol</button>
    <hr />
    <form asp-action="GoogleLogin" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger fw-bold rounded-pill mt-2 px-4" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Google ile Kayıt Ol</button>
    </form>
    <div class="text-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
</form> 