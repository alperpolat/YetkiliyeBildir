@{
    ViewData["Title"] = "Giriş Yap";
}
<div class="monster-section d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="monster-card" style="max-width: 400px; width: 100%; margin: 0 auto;">
        <h2 class="fw-bold text-center mb-4">Giriş Yap</h2>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">E-posta</label>
                <input type="email" class="form-control" id="email" name="email" required />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <input type="password" class="form-control" id="password" name="password" required />
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-2">Giriş Yap</button>
            <div class="text-danger mb-2">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        </form>
        <hr />
        <form asp-action="GoogleLogin" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger w-100">Google ile Giriş Yap</button>
        </form>
    </div>
</div> 