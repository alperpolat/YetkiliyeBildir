@{
    ViewData["Title"] = "Yetkili Başvuru";
}
<h2 class="fw-bold mb-4 text-theme" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:700;">Yetkili Kurum Başvurusu</h2>
<form asp-action="YetkiliRegister" method="post" class="bg-white rounded-4 shadow p-4">
    <div class="form-group">
        <label for="kurumAdi" class="form-label fw-semibold" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Kurum Adı</label>
        <input type="text" class="form-control fs-16px" id="kurumAdi" name="kurumAdi" required style="font-family:'Inter','Roboto',Arial,sans-serif;font-size:16px;" />
    </div>
    <div class="form-group">
        <label for="kurumMail" class="form-label fw-semibold" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Kurum Mail</label>
        <input type="email" class="form-control fs-16px" id="kurumMail" name="kurumMail" required style="font-family:'Inter','Roboto',Arial,sans-serif;font-size:16px;" />
    </div>
    <div class="form-group">
        <label for="kurumTelefon" class="form-label fw-semibold" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Kurum Telefon</label>
        <input type="text" class="form-control fs-16px" id="kurumTelefon" name="kurumTelefon" required style="font-family:'Inter','Roboto',Arial,sans-serif;font-size:16px;" />
    </div>
    <div class="form-group">
        <label for="adSoyad" class="form-label fw-semibold" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Ad Soyad</label>
        <input type="text" class="form-control fs-16px" id="adSoyad" name="adSoyad" required style="font-family:'Inter','Roboto',Arial,sans-serif;font-size:16px;" />
    </div>
    <div class="form-group">
        <label for="telefon" class="form-label fw-semibold" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Telefon</label>
        <input type="text" class="form-control fs-16px" id="telefon" name="telefon" required style="font-family:'Inter','Roboto',Arial,sans-serif;font-size:16px;" />
    </div>
    <div class="form-group">
        <label for="email" class="form-label fw-semibold" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">E-posta</label>
        <input type="email" class="form-control fs-16px" id="email" name="email" required style="font-family:'Inter','Roboto',Arial,sans-serif;font-size:16px;" />
    </div>
    <div class="form-group">
        <label for="password" class="form-label fw-semibold" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Şifre</label>
        <input type="password" class="form-control fs-16px" id="password" name="password" required style="font-family:'Inter','Roboto',Arial,sans-serif;font-size:16px;" />
    </div>
    <button type="submit" class="btn btn-theme fw-bold rounded-pill mt-2 px-4" style="font-family:'Inter','Roboto',Arial,sans-serif;font-weight:600;">Başvuru Yap</button>
    <div class="text-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
</form> 