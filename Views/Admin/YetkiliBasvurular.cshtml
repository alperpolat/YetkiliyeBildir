@model List<YetkiliyeBildir.Models.ApplicationUser>
@{
    ViewData["Title"] = "Yetkili Başvuruları";
}
<h2>Bekleyen Yetkili Başvuruları</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kurum Adı</th>
            <th>Ad Soyad</th>
            <th>Telefon</th>
            <th>E-posta</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.YetkiliKurum?.KurumAdi</td>
                <td>@user.AdSoyad</td>
                <td>@user.Telefon</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="YetkiliOnayla" method="post" style="display:inline">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Onayla</button>
                    </form>
                    <form asp-action="YetkiliReddet" method="post" style="display:inline">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Reddet</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table> 