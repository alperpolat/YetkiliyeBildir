@model IEnumerable<YetkiliyeBildir.Models.Report>
@{
    ViewData["Title"] = "İhbar Yönetimi";
}
<div class="monster-section">
    <h2 class="fw-bold mb-4">İhbar Yönetimi</h2>
    <div class="monster-card p-0">
        <table class="table table-bordered table-striped mb-0" style="border-radius: 12px; overflow: hidden;">
            <thead class="table-light">
                <tr>
                    <th>Kategori</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th>Tarih</th>
                    <th>Fotoğraf</th>
                    <th>Konum</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Category</td>
                        <td>@item.Description</td>
                        <td>@item.Status</td>
                        <td>@item.CreatedAt.ToString("g")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.PhotoPath))
                            {
                                <img src="@item.PhotoPath" alt="Fotoğraf" width="80" />
                            }
                        </td>
                        <td>
                            @if (item.Latitude != null && item.Longitude != null)
                            {
                                <a href="https://www.google.com/maps?q=@item.Latitude,@item.Longitude" target="_blank">Haritada Göster</a>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Durum</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 