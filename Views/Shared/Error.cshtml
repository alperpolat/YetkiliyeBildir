@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="monster-section d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="monster-card text-center" style="max-width: 500px; width: 100%; margin: 0 auto;">
        <h1 class="text-danger fw-bold mb-3">Bir Hata Oluştu</h1>
        <h4 class="mb-3">İşleminiz sırasında bir hata meydana geldi.</h4>
        @if (Model.ShowRequestId)
        {
            <p class="mb-2">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
        <div class="alert alert-warning mt-3">
            <h5 class="mb-2">Geliştirici Modu</h5>
            <p class="mb-0">Daha fazla hata detayı için uygulamayı <b>Development</b> modunda çalıştırabilirsiniz.</p>
        </div>
        <a class="btn btn-primary w-100 mt-3" href="/">Anasayfaya Dön</a>
    </div>
</div>
