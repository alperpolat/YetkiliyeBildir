<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YetkiliyeBildir</title>
    <!-- ================== BEGIN core-css ================== -->
    <link href="/assets/css/vendor.min.css" rel="stylesheet">
    <link href="/assets/css/app.min.css" rel="stylesheet">
    <!-- ================== END core-css ================== -->
    <!-- ================== BEGIN page-css ================== -->
    <link href="/assets/plugins/lity/dist/lity.min.css" rel="stylesheet">
    <!-- ================== END page-css ================== -->
    <style>
        body, html {
            font-family: 'Inter', 'Roboto', Arial, sans-serif !important;
            font-size: 16px;
            font-weight: 400;
            color: #222;
        }
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Inter', 'Roboto', Arial, sans-serif !important;
            font-weight: 700;
            letter-spacing: -0.5px;
        }
        .navbar-brand, .display-4, .display-5, .display-6 {
            font-family: 'Inter', 'Roboto', Arial, sans-serif !important;
            font-weight: 700;
            letter-spacing: -1px;
        }
        .fw-bold { font-weight: 700 !important; }
        .fw-semibold { font-weight: 600 !important; }
        .fw-500 { font-weight: 500 !important; }
        .fs-18px { font-size: 18px !important; }
        .fs-16px { font-size: 16px !important; }
        .fs-15px { font-size: 15px !important; }
        .fs-13px { font-size: 13px !important; }
    </style>
</head>
<body>
    <!-- BEGIN #app -->
    <div id="app" class="app">
        <!-- BEGIN #header -->
        <div id="header" class="app-header navbar navbar-expand-lg p-0">
            <div class="container-xxl px-3 px-lg-5">
                <button class="navbar-toggler border-0 p-0 me-3 fs-24px shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="h-2px w-25px bg-gray-500 d-block mb-1"></span>
                    <span class="h-2px w-25px bg-gray-500 d-block"></span>
                </button>
                <a class="navbar-brand d-flex align-items-center position-relative me-auto" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="fw-bold fs-3 text-theme">YetkiliyeBildir</span>
                </a>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <div class="navbar-nav ms-auto mb-2 mb-lg-0 fw-500">
                        <li class="nav-item me-2">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin") || User.IsInRole("Official") || User.IsInRole("KurumYetkilisi"))
                            {
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Admin" asp-action="KurumTalepleri">Kurum Talepleri</a></li>
                            }
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Admin" asp-action="Index">Kullanıcı Yönetimi</a></li>
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Admin" asp-action="KurumTalepleri">Kurum Yönetimi</a></li>
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Admin" asp-action="YetkiliBasvurular">Yetkili Başvuruları</a></li>
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Category" asp-action="Index">Kategori Yönetimi</a></li>
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Report" asp-action="Index">Tüm Bildirimler</a></li>
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Admin" asp-action="Raporlar">Raporlar</a></li>
                            }
                            else if (User.IsInRole("Kurum"))
                            {
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Report" asp-action="Index">Gelen Bildirimler</a></li>
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Admin" asp-action="KurumPersonelleri">Personel Yönetimi</a></li>
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Admin" asp-action="KurumTalepleri">Talepler</a></li>
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Admin" asp-action="Raporlar">Raporlar</a></li>
                            }
                            else // Vatandaş
                            {
                                <li class="nav-item me-2"><a class="nav-link" asp-controller="Report" asp-action="Create">Bildirim Oluştur</a></li>
                                @if (User.IsInRole("User"))
                                {
                                    <li class="nav-item me-2"><a class="nav-link" asp-controller="Report" asp-action="Index">Bildirimlerim</a></li>
                                }
                            }
                            <li class="nav-item me-2"><a class="nav-link" asp-controller="Account" asp-action="Profile">Profilim</a></li>
                        }
                    </div>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">@User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link">Çıkış</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
                @* <div class="ms-3">
                    <a href="/" class="btn btn-theme fw-bold rounded-pill px-3 py-2">Bildirim <i class="fa fa-arrow-right ms-2 opacity-5"></i></a>
                </div> *@
            </div>
        </div>
        <!-- END #header -->
        <div class="container-xxl p-3 p-lg-5">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <!-- BEGIN #footer -->
        <div id="footer" class="py-5 bg-gray-800 text-body text-opacity-75" data-bs-theme="dark">
            <div class="container-xxl px-3 px-lg-5">
                <div class="row">
                    <div class="col-sm-6 mb-3 mb-lg-0">
                        <div class="footer-copyright-text">&copy; 2025 YetkiliyeBildir</div>
                    </div>
                    <div class="col-sm-6 text-sm-end">
                        <a href="/" class="text-decoration-none text-body text-opacity-50">Bildirim</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- END #footer -->
    </div>
    <!-- END #app -->
    <!-- ================== BEGIN core-js ================== -->
    <script src="/assets/js/vendor.min.js"></script>
    <script src="/assets/js/app.min.js"></script>
    <!-- ================== END core-js ================== -->
    <!-- ================== BEGIN page-js ================== -->
    <script src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"></script>
    <script src="/assets/plugins/lity/dist/lity.min.js"></script>
    <!-- ================== END page-js ================== -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
